<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hernandomacias.be_part.Materias">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconnoticias"
            android:onClick="Inicio()" />

        <Button
            android:id="@+id/button2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconeventos"
            android:onClick="Evento()" />

        <Button
            android:id="@+id/button3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconnotifi" />

        <Button
            android:id="@+id/button4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconmensajes"
            android:onClick="Msj()" />

        <Button
            android:id="@+id/button5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconbuscar" />

        <Button
            android:id="@+id/button6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconperfil"
            android:onClick="Perfil()" />

        <Button
            android:id="@+id/button7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/iconconf" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Docente"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre materia"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="84dp" />

    <EditText
        android:id="@+id/editText24"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        android:text="Nota"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="123dp" />

    <ExpandableListView
        android:layout_width="164dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/button16"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:text="+"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="119dp" />

    <TableLayout
        android:layout_width="332dp"
        android:layout_height="226dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="249dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <EditText
        android:id="@+id/editText25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre del docente"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="185dp" />

</android.support.constraint.ConstraintLayout>
